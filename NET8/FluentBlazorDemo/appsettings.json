{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Debug",
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "FluentBlazorDemo"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args":
        {
          "configure": [
            {
              "Name": "Console"
            },
            {
              "Name": "File",
              "Args":
              {
                "path": "Logs/applog-.txt",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    ]
  }
}
