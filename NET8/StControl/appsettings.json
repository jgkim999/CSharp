{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.Grafana.Loki",
      "Serilog.Sinks.OpenSearch"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Properties": {
      "ApplicationName": "StControl"
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "bufferSize": 10000,
              "blockWhenFull": false
            },
            {
              "Name": "File",
              "bufferSize": 10000,
              "blockWhenFull": false,
              "Args": {
                "path": "./Logs/StControl-.log",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 8,
                "fileSizeLimitBytes": 16777216,
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
              }
            },
            {
              "Name": "Seq",
              "Args": {
                "serverUrl": "http://192.168.0.47:10001",
                "apiKey": "7IcnLMHBbZxPx03s2Plb",
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
              }
            },
            {
              "Name": "GrafanaLoki",
              "bufferSize": 10000,
              "blockWhenFull": false,
              "Args": {
                "uri": "http://192.168.0.47:3100",
                "labels": [
                  {
                    "key": "app",
                    "value": "StControl"
                  }
                ],
                "propertiesAsLabels": [
                  "app"
                ],
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
              }
            },
            {
              "Name": "OpenSearch",
              "bufferSize": 10000,
              "blockWhenFull": false,
              "Args": {
                "nodeUris": "http://192.168.0.47:9200",
                "indexFormat": "StControl-index-{0:yyyy.MM}",
                "batchPostingLimit": 50,
                "batchAction": "Create",
                "period": 2,
                "inlineFields": true,
                "connectionTimeout": 5
              }
            }
          ]
        }
      }
    ]
  }
}
