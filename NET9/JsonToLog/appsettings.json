{  
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "ServiceName": "JsonToLog",
    "Version": "1.0.0"
  },
  "OpenTelemetry": {
    "Endpoint": "http://192.168.0.47:4317",
    "Protocol": "OtlpProtocol.Grpc",
    "TraceSampleRate": 1.0
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "bufferSize": 10000,
              "blockWhenFull": false
            },
            {
              "Name": "File",
              "bufferSize": 10000,
              "blockWhenFull": false,
              "Args": {
                "path": "./Logs/app-.log",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 8,
                "fileSizeLimitBytes": 33554432,
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
              }
            }
          ]
        }
      }
    ]
  }
}
