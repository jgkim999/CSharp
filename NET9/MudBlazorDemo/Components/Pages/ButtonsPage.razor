@page "/buttons"

<MudGrid Spacing="1" Justify="Justify.FlexStart">
    <MudItem xs="12">
        <MudPaper Class="pa-2">
            <MudStack Row="true">
                <MudPaper Class="border-l-0 border-t-0 border-b-0 border-r-0 align-self-center"
                          Elevation="0">
                    <MudText Align="Align.Left" Typo="Typo.h6">
                        Buttons
                    </MudText>
                </MudPaper>
                <MudPaper Class="border-l-0 border-t-0 border-b-0 border-r-0 align-self-center"
                          Elevation="0">
                    <MudText Align="Align.Left" Typo="Typo.body1">
                        : <MudLink Href="https://mudblazor.com/components/button#icons" Target="_blank">MudButton</MudLink>
                    </MudText>
                </MudPaper>
            </MudStack>
            <br/>
            <MudGrid>
                <MudItem xs="4">
                    <MudPaper Class="border-l-0 border-t-0 border-b-0 border-r-2"
                              Outlined="false"
                              Square="true"
                              Elevation="0">
                        <MudText Align="Align.Left">
                            <b>Filled</b>
                        </MudText>
                        <MudButton Variant="Variant.Filled" Size="Size.Small">Default</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small">Primary</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Small">Secondary</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Success" Size="Size.Small">Success</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Small">Info</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small">Warning</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small">Error</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Dark" Size="Size.Small">Dark</MudButton>
                        <MudButton Variant="Variant.Filled" Disabled="true" Size="Size.Small">Disabled</MudButton>
                    </MudPaper>
                </MudItem>
                <MudItem xs="4">
                    <MudPaper Class="border-l-0 border-t-0 border-b-0 border-r-2"
                              Outlined="false"
                              Square="true"
                              Elevation="0">
                        <MudText Align="Align.Left">
                            <b>Drop Shadow False</b>
                        </MudText>
                        <MudButton DropShadow="false" Variant="Variant.Filled" Size="Size.Small">Default</MudButton>
                        <MudButton DropShadow="false" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small">Primary</MudButton>
                        <MudButton DropShadow="false" Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Small">Secondary</MudButton>
                        <MudButton DropShadow="false" Variant="Variant.Filled" Color="Color.Success" Size="Size.Small">Success</MudButton>
                        <MudButton DropShadow="false" Variant="Variant.Filled" Color="Color.Info" Size="Size.Small">Info</MudButton>
                        <MudButton DropShadow="false" Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small">Warning</MudButton>
                        <MudButton DropShadow="false" Variant="Variant.Filled" Color="Color.Error" Size="Size.Small">Error</MudButton>
                        <MudButton DropShadow="false" Variant="Variant.Filled" Color="Color.Dark" Size="Size.Small">Dark</MudButton>
                        <MudButton DropShadow="false" Variant="Variant.Filled" Disabled="true" Size="Size.Small">Disabled</MudButton>
                    </MudPaper>
                </MudItem>
                <MudItem xs="4">
                    <MudPaper Class="border-l-0 border-t-0 border-b-0 border-r-2"
                              Outlined="false"
                              Square="true"
                              Elevation="0">
                        <MudText Align="Align.Left">
                            <b>Text Buttons</b>
                        </MudText>
                        <MudButton Variant="Variant.Text" Size="Size.Small">Default</MudButton>
                        <MudButton Variant="Variant.Text" Color="Color.Primary" Size="Size.Small">Primary</MudButton>
                        <MudButton Variant="Variant.Text" Color="Color.Secondary" Size="Size.Small">Secondary</MudButton>
                        <MudButton Variant="Variant.Text" Color="Color.Success" Size="Size.Small">Success</MudButton>
                        <MudButton Variant="Variant.Text" Color="Color.Info" Size="Size.Small">Info</MudButton>
                        <MudButton Variant="Variant.Text" Color="Color.Warning" Size="Size.Small">Warning</MudButton>
                        <MudButton Variant="Variant.Text" Color="Color.Error" Size="Size.Small">Error</MudButton>
                        <MudButton Variant="Variant.Text" Color="Color.Dark" Size="Size.Small">Dark</MudButton>
                        <MudButton Variant="Variant.Text" Disabled="true" Size="Size.Small">Disabled</MudButton>
                    </MudPaper>
                </MudItem>
            </MudGrid>
            <MudGrid Class="mt-2">
                <MudItem xs="4">
                    <MudPaper Class="border-l-0 border-t-0 border-b-0 border-r-2"
                              Outlined="false"
                              Square="true"
                              Elevation="0">
                        <MudText Align="Align.Left">
                            <b>Outlined Buttons</b>
                        </MudText>
                        <MudButton Variant="Variant.Outlined" Size="Size.Small">Default</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small">Primary</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Size="Size.Small">Secondary</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Success" Size="Size.Small">Success</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Info" Size="Size.Small">Info</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Warning" Size="Size.Small">Warning</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Error" Size="Size.Small">Error</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Dark" Size="Size.Small">Dark</MudButton>
                        <MudButton Variant="Variant.Outlined" Disabled="true" Size="Size.Small">Disabled</MudButton>

                        <MudButton Variant="Variant.Outlined" Size="Size.Small">Default</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small">Primary</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Size="Size.Small">Secondary</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Success" Size="Size.Small">Success</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Info" Size="Size.Small">Info</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Warning" Size="Size.Small">Warning</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Error" Size="Size.Small">Error</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Dark" Size="Size.Small">Dark</MudButton>
                        <MudButton Variant="Variant.Outlined" Disabled="true" Size="Size.Small">Disabled</MudButton>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudItem>
</MudGrid>