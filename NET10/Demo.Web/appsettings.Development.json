{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "OpenTelemetry": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Information",
        "OpenTelemetry": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj} {NewLine}{Exception} TraceId={TraceId} SpanId={SpanId}{NewLine}"
              }
            }
          ],
          "bufferSize": 5000,
          "blockWhenFull": false
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/demo-web-dev-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 3,
                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext} {Message:lj} {NewLine}{Exception} TraceId={TraceId} SpanId={SpanId}{NewLine}"
              }
            }
          ],
          "bufferSize": 5000,
          "blockWhenFull": false
        }
      }
    ]
  },
  "OpenTelemetry": {
    "ServiceName": "Demo.Web",
    "ServiceVersion": "1.0.0-dev",
    "Environment": "Development",
    "ServiceInstanceId": null,
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 1.0,
      "MaxSpans": 1000,
      "MaxAttributes": 128,
      "MaxEvents": 128,
      "MaxLinks": 64
    },
    "Metrics": {
      "Enabled": true,
      "CollectionIntervalSeconds": 10,
      "ExportTimeoutMilliseconds": 5000,
      "MaxBatchSize": 128,
      "BatchExportIntervalMilliseconds": 2000
    },
    "Logging": {
      "Enabled": true,
      "IncludeTraceId": true,
      "IncludeSpanId": true,
      "StructuredLogging": true,
      "LogLevel": "Debug"
    },
    "Exporter": {
      "Type": "OTLP",
      "OtlpEndpoint": "http://192.168.0.47:4317",
      "OtlpHeaders": {},
      "OtlpProtocol": "grpc",
      "TimeoutMilliseconds": 5000,
      "BatchExport": {
        "MaxQueueSize": 512,
        "MaxExportBatchSize": 128,
        "ExportTimeoutMilliseconds": 5000,
        "ScheduledDelayMilliseconds": 1000
      }
    },
    "Development": {
      "EnableDetailedTracing": true,
      "EnableVerboseLogging": true,
      "ShowInternalActivities": true,
      "IncludeHttpHeaders": true,
      "IncludeDatabaseQueries": true
    }
  }
}
