{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "OpenTelemetry": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Information",
        "OpenTelemetry": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj} {NewLine}{Exception} TraceId={TraceId} SpanId={SpanId}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/demo-web-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 3,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext} {Message:lj} {NewLine}{Exception} TraceId={TraceId} SpanId={SpanId}{NewLine}"
        }
      }
    ]
  },
  "OpenTelemetry": {
    "ServiceName": "Demo.Web",
    "ServiceVersion": "1.0.0-dev",
    "Environment": "Development",
    "ServiceInstanceId": null,
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 1.0,
      "MaxSpans": 1000,
      "MaxAttributes": 64,
      "MaxEvents": 64,
      "MaxLinks": 64
    },
    "Metrics": {
      "Enabled": true,
      "CollectionIntervalSeconds": 15,
      "ExportTimeoutMilliseconds": 10000,
      "MaxBatchSize": 256,
      "BatchExportIntervalMilliseconds": 3000
    },
    "Logging": {
      "Enabled": true,
      "IncludeTraceId": true,
      "IncludeSpanId": true,
      "StructuredLogging": true
    },
    "Exporter": {
      "Type": "OTLP",
      "OtlpEndpoint": "http://192.168.0.47:4317",
      "OtlpHeaders": {},
      "OtlpProtocol": "grpc",
      "TimeoutMilliseconds": 10000,
      "BatchExport": {
        "MaxQueueSize": 2048,
        "MaxExportBatchSize": 512,
        "ExportTimeoutMilliseconds": 30000,
        "ScheduledDelayMilliseconds": 5000
      }
    }
  }
}
