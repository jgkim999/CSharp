{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "OpenTelemetry": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "OpenTelemetry": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {NewLine}{Exception} TraceId={TraceId} SpanId={SpanId}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/demo-web-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {NewLine}{Exception} TraceId={TraceId} SpanId={SpanId}{NewLine}"
        }
      }
    ]
  },
  "OpenTelemetry": {
    "ServiceName": "Demo.Web",
    "ServiceVersion": "1.0.0",
    "Environment": "Production",
    "ServiceInstanceId": null,
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 0.05,
      "MaxSpans": 5000,
      "MaxAttributes": 256,
      "MaxEvents": 256,
      "MaxLinks": 256
    },
    "Metrics": {
      "Enabled": true,
      "CollectionIntervalSeconds": 120,
      "ExportTimeoutMilliseconds": 60000,
      "MaxBatchSize": 1024,
      "BatchExportIntervalMilliseconds": 30000
    },
    "Logging": {
      "Enabled": true,
      "IncludeTraceId": true,
      "IncludeSpanId": true,
      "StructuredLogging": true
    },
    "Exporter": {
      "Type": "OTLP",
      "OtlpEndpoint": "https://your-otlp-endpoint:4317",
      "OtlpHeaders": {
        "Authorization": "Bearer your-api-key"
      },
      "OtlpProtocol": "grpc",
      "TimeoutMilliseconds": 30000,
      "BatchExport": {
        "MaxQueueSize": 4096,
        "MaxExportBatchSize": 1024,
        "ExportTimeoutMilliseconds": 60000,
        "ScheduledDelayMilliseconds": 10000
      }
    }
  }
}