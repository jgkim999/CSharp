{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "OpenTelemetry": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "OpenTelemetry": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {NewLine}{Exception} TraceId={TraceId} SpanId={SpanId}{NewLine}"
              }
            }
          ],
          "bufferSize": 20000,
          "blockWhenFull": false
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/demo-web-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 30,
                "fileSizeLimitBytes": 104857600,
                "rollOnFileSizeLimit": true,
                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {NewLine}{Exception} TraceId={TraceId} SpanId={SpanId}{NewLine}"
              }
            }
          ],
          "bufferSize": 20000,
          "blockWhenFull": false
        }
      }
    ]
  },
  "OpenTelemetry": {
    "ServiceName": "Demo.Web",
    "ServiceVersion": "1.0.0",
    "Environment": "Production",
    "ServiceInstanceId": null,
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 0.1,
      "MaxSpans": 10000,
      "MaxAttributes": 512,
      "MaxEvents": 512,
      "MaxLinks": 256,
      "SamplingStrategy": "TraceIdRatioBased",
      "ParentBasedSampling": true
    },
    "Metrics": {
      "Enabled": true,
      "CollectionIntervalSeconds": 60,
      "ExportTimeoutMilliseconds": 30000,
      "MaxBatchSize": 2048,
      "BatchExportIntervalMilliseconds": 15000,
      "MaxMetricStreams": 1000,
      "MaxMetricPointsPerMetricStream": 2000
    },
    "Logging": {
      "Enabled": true,
      "IncludeTraceId": true,
      "IncludeSpanId": true,
      "StructuredLogging": true,
      "LogLevel": "Information"
    },
    "Exporter": {
      "Type": "OTLP",
      "OtlpEndpoint": "http://192.168.0.47:4317",
      "OtlpHeaders": {
        "Authorization": "Bearer your-api-key",
        "X-Service-Name": "Demo.Web"
      },
      "OtlpProtocol": "grpc",
      "TimeoutMilliseconds": 30000,
      "RetryPolicy": {
        "Enabled": true,
        "MaxRetryAttempts": 3,
        "InitialBackoffMs": 1000,
        "MaxBackoffMs": 30000,
        "BackoffMultiplier": 2.0
      },
      "BatchExport": {
        "MaxQueueSize": 8192,
        "MaxExportBatchSize": 2048,
        "ExportTimeoutMilliseconds": 30000,
        "ScheduledDelayMilliseconds": 5000
      }
    },
    "ResourceLimits": {
      "MaxMemoryUsageMB": 512,
      "MaxCpuUsagePercent": 10,
      "MaxActiveSpans": 10000,
      "MaxQueuedSpans": 50000,
      "SpanProcessorBatchSize": 2048,
      "SpanProcessorTimeout": 30000
    },
    "Performance": {
      "EnableGCOptimization": true,
      "UseAsyncExport": true,
      "EnableCompression": true,
      "CompressionType": "gzip",
      "FilterHealthChecks": true,
      "FilterStaticFiles": true,
      "MinimumDurationMs": 10
    }
  }
}