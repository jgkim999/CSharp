{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Postgres": {
    "ConnectionString": "Host=192.168.0.47;Port=5432;Database=mydatabase;Username=myuser;Password=strong_password;Maximum Pool Size=8;Minimum Pool Size=2;"
  },
  "OpenTelemetry": {
    "ServiceName": "Demo.Web",
    "ServiceVersion": "1.0.0",
    "Environment": "Production",
    "ServiceInstanceId": null,
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 0.1,
      "MaxSpans": 2000,
      "MaxAttributes": 128,
      "MaxEvents": 128,
      "MaxLinks": 128
    },
    "Metrics": {
      "Enabled": true,
      "CollectionIntervalSeconds": 60,
      "ExportTimeoutMilliseconds": 30000,
      "MaxBatchSize": 512,
      "BatchExportIntervalMilliseconds": 10000
    },
    "Logging": {
      "Enabled": true,
      "IncludeTraceId": true,
      "IncludeSpanId": true,
      "StructuredLogging": true
    },
    "Exporter": {
      "Type": "OTLP",
      "OtlpEndpoint": "http://localhost:4317",
      "OtlpHeaders": {},
      "OtlpProtocol": "grpc",
      "TimeoutMilliseconds": 10000,
      "BatchExport": {
        "MaxQueueSize": 2048,
        "MaxExportBatchSize": 512,
        "ExportTimeoutMilliseconds": 30000,
        "ScheduledDelayMilliseconds": 5000
      }
    }
  }
}
