{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.OpenTelemetry"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {NewLine}{Exception} TraceId={TraceId} SpanId={SpanId}{NewLine}"
              }
            }
          ],
          "bufferSize": 10000,
          "blockWhenFull": false
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/demo-web-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {NewLine}{Exception} TraceId={TraceId} SpanId={SpanId}{NewLine}"
              }
            }
          ],
          "bufferSize": 10000,
          "blockWhenFull": false
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithProcessId"
    ],
    "Properties": {
      "Application": "Demo.Web"
    }
  },
  "AllowedHosts": "*",
  "Postgres": {
    "ConnectionString": "Host=192.168.0.47;Port=5432;Database=mydatabase;Username=myuser;Password=strong_password;Maximum Pool Size=8;Minimum Pool Size=2;"
  },
  "OpenTelemetry": {
    "ServiceName": "Demo.Web",
    "ServiceVersion": "1.0.0",
    "Environment": "Production",
    "ServiceInstanceId": null,
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 1.0,
      "MaxSpans": 2000,
      "MaxAttributes": 128,
      "MaxEvents": 128,
      "MaxLinks": 128
    },
    "Metrics": {
      "Enabled": true,
      "CollectionIntervalSeconds": 60,
      "ExportTimeoutMilliseconds": 30000,
      "MaxBatchSize": 512,
      "BatchExportIntervalMilliseconds": 10000
    },
    "Logging": {
      "Enabled": true,
      "IncludeTraceId": true,
      "IncludeSpanId": true,
      "StructuredLogging": true
    },
    "Exporter": {
      "Type": "OTLP",
      "OtlpEndpoint": "http://192.168.0.47:4317",
      "OtlpHeaders": {},
      "OtlpProtocol": "grpc",
      "TimeoutMilliseconds": 10000,
      "BatchExport": {
        "MaxQueueSize": 2048,
        "MaxExportBatchSize": 512,
        "ExportTimeoutMilliseconds": 30000,
        "ScheduledDelayMilliseconds": 5000
      }
    }
  }
}
