{
  "name": "otel-collector",
  "image": "otel/opentelemetry-collector-contrib:latest",
  "essential": true,
  "cpu": 256,
  "memory": 512,
  "portMappings": [
    {
      "containerPort": 4317,
      "protocol": "tcp",
      "name": "otlp-grpc"
    },
    {
      "containerPort": 4318,
      "protocol": "tcp",
      "name": "otlp-http"
    },
    {
      "containerPort": 8888,
      "protocol": "tcp",
      "name": "metrics"
    },
    {
      "containerPort": 13133,
      "protocol": "tcp",
      "name": "health"
    }
  ],
  "environment": [
    {
      "name": "ENVIRONMENT",
      "value": "production"
    },
    {
      "name": "LOKI_ENDPOINT",
      "value": "loki"
    },
    {
      "name": "JAEGER_ENDPOINT",
      "value": "jaeger"
    }
  ],
  "mountPoints": [
    {
      "sourceVolume": "otel-config",
      "containerPath": "/etc/otelcol-contrib",
      "readOnly": true
    }
  ],
  "healthCheck": {
    "command": [
      "CMD-SHELL",
      "wget --no-verbose --tries=1 --spider http://localhost:13133/health || exit 1"
    ],
    "interval": 30,
    "timeout": 10,
    "retries": 3,
    "startPeriod": 60
  },
  "logConfiguration": {
    "logDriver": "awslogs",
    "options": {
      "awslogs-group": "/ecs/gamepulse-otel-collector",
      "awslogs-region": "ap-northeast-2",
      "awslogs-stream-prefix": "otel-collector"
    }
  },
  "command": [
    "--config=/etc/otelcol-contrib/otel-collector-config.yaml"
  ]
}