{
  "family": "gamepulse-production",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/gamepulse-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/gamepulse-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "gamepulse-app",
      "image": "ACCOUNT_ID.dkr.ecr.ap-northeast-2.amazonaws.com/gamepulse:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/gamepulse-production",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "ASPNETCORE_ENVIRONMENT",
          "value": "Production"
        },
        {
          "name": "ASPNETCORE_URLS",
          "value": "http://+:8080"
        },
        {
          "name": "OTEL_EXPORTER_OTLP_ENDPOINT",
          "value": "http://localhost:4317"
        },
        {
          "name": "OTEL_SERVICE_NAME",
          "value": "gamepulse-production"
        },
        {
          "name": "OTEL_RESOURCE_ATTRIBUTES",
          "value": "service.version=1.0.0,deployment.environment=production"
        }
      ],
      "secrets": [
        {
          "name": "ConnectionStrings__DefaultConnection",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:ACCOUNT_ID:secret:gamepulse/production/database"
        },
        {
          "name": "ConnectionStrings__Redis",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:ACCOUNT_ID:secret:gamepulse/production/redis"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "dependsOn": [
        {
          "containerName": "otel-collector",
          "condition": "START"
        }
      ]
    },
    {
      "name": "otel-collector",
      "image": "otel/opentelemetry-collector-contrib:latest",
      "portMappings": [
        {
          "containerPort": 4317,
          "protocol": "tcp"
        },
        {
          "containerPort": 4318,
          "protocol": "tcp"
        },
        {
          "containerPort": 8888,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/gamepulse-production",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "otel-collector"
        }
      },
      "environment": [
        {
          "name": "OTEL_CONFIG_FILE",
          "value": "/etc/otelcol-contrib/otel-collector-config.yaml"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "otel-config",
          "containerPath": "/etc/otelcol-contrib",
          "readOnly": true
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "otel-config",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-xxxxxxxxx",
        "rootDirectory": "/otel-config"
      }
    }
  ]
}